### Meta ###
alias editconfig="vi ~/.bashrc"

# SHELL - edit settings
alias editaliases="vi ~/.aliases"
alias editexports="vi ~/.exports"

# GIT
#
## BASH/ZSH
#
alias ga="git add"
alias gb="git branch"
alias gc="git checkout"
alias gcm="git commit -m"
alias gcp="git cherry-pick"
alias gd="git diff"
alias gm="git merge"
alias gmm="if read_confirm; git merge master; end"
alias gp="git pull"
alias gpb="git pull (git config --get remote.origin.url) (git rev-parse --abbrev-ref HEAD)"
alias gpo="git push origin (git rev-parse --abbrev-ref HEAD)"
alias grh="git reset --hard HEAD~1"
alias grm="git rm"
alias gs="git status"
alias gum="git reset --merge ORIG_HEAD"
alias gbc="git branch \1; git checkout \1;

# SHELL - ls
alias l="ls -CF"
alias la="ls -A"
alias ll="ls -alF"
alias lldir="ls -la | grep ^d"

# WEBPACK
alias pack="webpack --config webpack.config.js"

# POSTGRES
alias pgstart="postgres -D $PG_DATA_DIR start > /dev/null"

alias resource="source ~/.exports; source ~/.aliases"

