# RVM
#
## BASH/ZSH
alias rv="rvm current and ruby --version"
alias rgc="rvm gemset create"
alias rgd="rvm gemset delete"
alias rgl="rvm gemset list"
alias rgu="rvm gemset use"
alias rvc="rvm current"
alias rvl="rvm list"
alias rvi="rvm install"
alias rvu="rvm use"

# RAILS
alias sret="export RAILS_ENV='test'"

# VAGRANT
alias vd="vagrant destroy"
alias vs="vagrant ssh"
alias vu="vagrant up"

# RSpec
alias ber="bundle exec rspec"

#PyEnv
if command -v pyenv 1>/dev/null 2>&1
  pyenv init - | source
end

# Batgrep
#
## BASH
#
alias bg="batgrep"

# MongoDB
alias mongostart="mongod --config /usr/local/etc/mongod.conf"
alias mongores="mongorestore --uri='mongodb://$MONGO_DB_HOST:$MONGO_DB_PORT/$MONGO_DB_NAME?$MONGO_DB_PARAMS' --drop --db=$MONGO_DB_NAME $MONGO_DB_DIR"
